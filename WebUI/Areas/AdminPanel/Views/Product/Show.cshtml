<div class="container">
    <div class="row">
        <h4 class="card-title">Products</h4>
        <a class="btn btn-success" asp-action="Create" style="width:150px; height:35px" >Create Product</a>
        <div class="col-12">
            <table class="table table-image">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Title</th>
                        <th scope="col">Price</th>
                        <th scope="col">Count</th>
                        <th scope="col">Settings</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <th scope="row">@count</th>
                            <td class="w-25">
                                <img src="http://boldomatic.com/content/productmockup?mockup=B-TPPR-PST16-N-m2&key=post-pdfs/Rdm9fw-1e120bd8340cbb5f6c68d84f124d973d2b58493fac9651723d5f62863dfee41b.pdf&width=800&format=jpg&quality=95&design=original&color=white&size=16x16" class="img-fluid img-thumbnail" alt="Sheep" style="width:400px; height:200px">
                            </td>
                            <td>@product.Title</td>
                            <td>$@product.Price</td>
                            <td>@product.Count</td>
                            <td>
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@product.Id"><i class="mdi mdi-delete-variant"></i></a>
                                <a class="btn btn-sm btn-danger" asp-action="Update" asp-route-id="@product.Id"><i class="mdi mdi-lead-pencil"></i></a>
                            </td>
                        </tr>
                        count++;

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>