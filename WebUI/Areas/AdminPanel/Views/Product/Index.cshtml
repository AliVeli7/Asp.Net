@using WebUI.Models
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Product</h4>
                <a class="btn btn-success" asp-action="Create">Create Product</a>
                <form method="post">
                    <label >Search Product by Id</label>
                    <input name="Id" class="form-control" placeholder="Product Id">
                    <button asp-route-id=Id asp-action="ShowById" type="submit" class="btn btn-primary mr-2">Find</button>
                </form>
                <div class="table-responsive pt-3">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Product Category
                                </th>
                                <th>CategoryId</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <a class="btn btn-sm btn-danger" asp-action="Show" asp-route-id="@category.Id">@category.Name</a>
                                    </td>
                                    <td>
                                        <a class="btn btn-sm btn-danger" asp-action="Show" asp-route-id="@category.Id">@category.Id</a>
                                    </td>

                                </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

