@using WebUI.Models
@model HomeViewModel
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Product</h4>
                <a class="btn btn-success" asp-action="Create">Create Product</a>
                <div class="table-responsive pt-3">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model.Categories)
                            {
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <a class="btn btn-sm btn-danger" asp-action="Index" asp-route-id="@category.Id"><i class="mdi mdi-delete-variant"></i></a>
                                    </td>
                                    <td>
                                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@category.Id"><i class="mdi mdi-delete-variant"></i></a>
                                        <a class="btn btn-sm btn-danger" asp-action="Update" asp-route-id="@category.Id"><i class="mdi mdi-lead-pencil"></i></a>

                                    </td>
                                </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

